@keyframes move {
  0% {
    left 84%
    top 43% 
  }
  100% {
    left -20%
    top 58% 
  }
}

.events
  padding-top 40px
  position relative
  background-image: -moz-linear-gradient( -90deg, rgb(255,255,255) 14%, rgb(214,238,250) 89%);
  background-image: -webkit-linear-gradient( -90deg, rgb(255,255,255) 14%, rgb(214,238,250) 89%);
  background-image: -ms-linear-gradient( -90deg, rgb(255,255,255) 14%, rgb(214,238,250) 89%);
  width: 100%
  min-height: 620px;
  margin 0 auto
  clip-path: polygon(0% 0%, 100% 0%, 100% 60%, 0 75%)
  &:before
    position absolute
    width 100%
    height 100%
    content ""
    background  url('../img/event-triangle1.png') right bottom no-repeat
    bottom 120px
    right 0
    z-index -1
  &:after
    position absolute
    width 100%
    height 100%
    content ""
    background  url('../img/event-triangle2.png') left  no-repeat
    top 63px
    left 0px
    z-index -1
  h1
    font-size: 34px;
    font-family: "Intro Regular Alt";
    color: rgb(98, 97, 97);
    line-height: 1.324;
    text-align: center;
  img 
    position absolute 
    animation move 2.5s linear infinite normal none
  

    &:after
      position absolute
      width 60%
      height 100%
      content ""
      background  url('../img/event-triangle3.png') left no-repeat
      left 0
      bottom 0
      left 430px
      top -5px
      z-index 0


.events-container
  width 980px
  display flex
  margin 0 auto 
  justify-content space-between

.events-container__item
  position relative
  width 245px
  height 289px
  background  url('../img/event-flag.png') no-repeat
  &:before
    position absolute
    font-size: 30px;
    font-family: "Intro Bold Alt";
    color: rgb(255, 255, 255);
    line-height: 1.5;
    text-align: center;
    -moz-transform: matrix( 1,-0.14098364188073,0,1,0,0);
    -webkit-transform: matrix( 1,-0.14098364188073,0,1,0,0);
    -ms-transform: matrix( 1,-0.14098364188073,0,1,0,0);
    top 7px
    left 9px
  &:nth-child(1)
    margin-top 40px
    &:before
      content "10"
  &:nth-child(2)
    margin-top 20px  
    &:before
      content "21"
  &:nth-child(3) 
    &:before
      content "24"
  h2
    margin-left 25px
    margin-top 65px
    font-size: 18px;
    font-family: "Intro Regular";
    color: rgb(255, 255, 255);
    text-align: left 
    -moz-transform: matrix( 1,-0.18205689277899,0,1,0,0);
    -webkit-transform: matrix( 1,-0.18205689277899,0,1,0,0);
    -ms-transform: matrix( 1,-0.18205689277899,0,1,0,0);
  a
    text-decoration none
    &:hover
      text-decoration underline white
