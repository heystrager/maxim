.banner
  margin 0 auto 
  max-width 980px

.banner-item
  margin-top 40px  
  position relative

.banner-description
  background-color: #e34168
  opacity: 0.949;
  position: absolute;
  width 400px
  height 230px
  top 90px
  left 0px
  h1
    margin-top 0
    margin-left 40px
    font-size: 34px;
    font-family: "Intro Regular Alt";
    color: rgb(255, 255, 255);
    line-height: 1.324;
    text-align: left;
  h2
    margin-top -15px
    margin-left 40px
    font-size: 14px;
    font-family: "Open Sans Light";
    color: rgb(255, 255, 255);
    line-height: 1.324;
    text-align: left;
  a
    margin-left 15px
    text-decoration none
    &:hover
      text-decoration underline white 

.banner-buttons
  padding-top 10px
  margin-left 25px



  