.guy
  background linear-gradient( to bottom, #fff, #e4f3f5)
  width: 100%
  height: 226px;
  img
    position relative
    margin -75px 0 0 300px

.guy-adv
  position relative
  border-style: solid;
  border-width: 5px;
  border-color: rgb(211, 239, 242);
  border-radius: 3px;
  background-color: #ffffff
  outline: solid 5px #FFFFFF
  width: 361px;
  height: 134px;
  margin 50px auto 0 
  &:before
    position absolute
    height 100%
    width 100%
    content ""
    background  url('../img/guy-adv1.png') left bottom no-repeat
    top 88px
    left 40px
  &:after
    position absolute
    height 100%
    width 100%
    content ""
    background  url('../img/guy-adv1.png') right bottom no-repeat
    top 88px
    right 40px
  h1
    margin-left 30px
    font-size: 20px;
    font-family: "Intro Regular";
    color: rgb(98, 97, 97);
    text-align: left;
  p
    margin-left 30px
    font-size: 13px;
    font-family: "Open Sans";
    color: rgb(98, 97, 97);
  span
    font-size 20px
    font-family "Intro Bold Alt"
    color #1bbbd9  

 



