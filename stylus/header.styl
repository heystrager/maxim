.header
  position fixed 
  z-index 100
  width 100%
  height 50px
  background-color #ed4970

.header-container
  max-width 980px
  height 50px
  margin 0 auto   
  display flex
  justify-content center 

.header-container__element
  display flex
  justify-content center 
  height 50px
  width 245px 
  &:nth-child(1)
    background-color #ce365b
    h3:hover
      color #fdfdfd
    
  &:nth-child(4)
    background-color #ce365b  
    h3:hover
      color #fdfdfd

  h3 
    font-size: 14px;
    font-family: "Intro Regular";
    color: #ffa3b9
    text-transform: uppercase;
    text-align center 

  img 
    margin-top 7px 
    margin-right 20px 
    height 32px
    width 32px

  a
    text-decoration none
    display block

.header-container__element--numbers
  font-size: 20px;
  font-family: "Intro Bold";
  color: #f3f9fa

